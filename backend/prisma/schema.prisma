generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

enum Type {
  cat
  dog
}

enum HouseEn {
  house
  condo
}

enum Financial {
  belowTenThousand
  tenThousand
  twentyThousand
  thirtyThousand
  fourThousand
  aboveFiveThousand
}

enum Pickup {
  selfPickup
  delivery
}

model Pet {
  id          Int       @id @default(autoincrement())
  name        String
  type        Type
  gender      Gender
  pictureUrl  String
  color       String?
  dateOfBirth DateTime?
  ageYear     Int?
  ageMonth    Int?
  breed       String?
  phoneNumber String
  address     String
  vacineUrl   String?
  userId      Int
  User        User      @relation(fields: [userId], references: [id])
  Vaccine     Vaccine[]
  RequestForm     RequestForm[]
}

model Vaccine {
  id      Int     @id @default(autoincrement())
  vaccine String?
  petId   Int
  Pet     Pet     @relation(fields: [petId], references: [id])
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  firstName String
  lastName  String
  tel       String
  Pet       Pet[]
  RequestForm   RequestForm[]
}

model RequestForm {
  id Int @id @default(autoincrement())
  houseEn HouseEn
  financial Financial
  pickup Pickup
  addressRequest String

  userId Int
  User   User @relation(fields: [userId], references: [id])

  petId Int 
  Pet   Pet @relation(fields: [petId], references: [id])
}
