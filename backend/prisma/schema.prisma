generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

enum Type {
  cat
  dog
}

model Pet {
  id          Int       @id @default(autoincrement())
  name        String
  type        Type
  gender      Gender
  pictureUrl  String
  color       String?
  dateOfBirth DateTime?
  ageYear     Int?
  ageMonth    Int?
  breed       String?
  phoneNumber String
  address     String
  vacineUrl   String?
  userId      Int
  User        User      @relation(fields: [userId], references: [id])
  Vaccine     Vaccine[]
  Request     Request[]
}

model Vaccine {
  id      Int     @id @default(autoincrement())
  vaccine String?
  petId   Int
  Pet     Pet     @relation(fields: [petId], references: [id])
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  firstName String
  lastName  String
  tel       String
  Pet       Pet[]
  Request Request[]
}

model Request {
  id Int @id @default(autoincrement())
  

  userId      Int
  User        User      @relation(fields: [userId], references: [id])
  
  petId Int @unique
  Pet   Pet @relation(fields: [petId], references: [id])
}
